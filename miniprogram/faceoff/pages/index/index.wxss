.shaer-app{
  position: absolute;
  top: 150rpx;
  left: 22rpx;
  display: block;
  width: 710rpx;
  background: #fff;
  height: 800rpx;
  z-index: 9;
  border: solid 1px #888;
  border-radius: 70rpx;
